@inherits ItemModalCode

<EditForm Model="Item" OnValidSubmit="Save">
    <DataAnnotationsValidator />
    <RadzenFieldset Text="Item Details">
        <div class="row">
            <div class="row">
                <div class="col-md-10">
                    <h3>Name</h3>
                    <RadzenTextBox Placeholder="Oxen..." @bind-Value="Item.Name" Style="margin-bottom: 20px" />
                    <ValidationMessage For="() => Item.Name" />
                    <br />
                    <h3>Points</h3>
                    <RadzenNumeric TValue="int" Placeholder="0" Step="1" @bind-Value="Item.Points" Style="margin-bottom: 20px" />
                    <ValidationMessage For="() => Item.Points" />
                    <br />
                    <InputImage Label="Image" OnSelectedImage="ItemImageSelected" ImageURL="@ImageURL"/>
                </div>
            </div>
        </div>
    </RadzenFieldset>
    <!--Include breaks after the final control before the button group-->
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" @onclick="Cancel" class="btn btn-secondary">Cancel</button>
    </div>
</EditForm>